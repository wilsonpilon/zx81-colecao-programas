{
    "version": "1.0.6",
    "tasks": [
        {
            "label": "make",
            "type": "shell",
            "command": "${workspaceFolder}/zxtext2p",
            "args": [
                "-o","main.p",
                "main.bas",""
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "ZX81 Make Current File",
            "type": "shell",
            "command": "${workspaceFolder}/zxtext2p",
            "args": [
                "-o","${file}.p",
                "${file}",""
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "ZX81 emulator Current File",
            "type": "shell",
            "command": "sz81",
            "args": [
                "${file}.p","",
                "",""
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }    
    ]
}